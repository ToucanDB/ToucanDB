# MANIFEST.in - Specifies which files to include in the package distribution

# Include essential documentation
include README.md
include LICENSE.md
include CONTRIBUTING.md

# Include assets (logos, images)
recursive-include assets *.png *.jpg *.jpeg *.svg

# Include configuration files
include pyproject.toml

# Include examples
recursive-include examples *.py

# Include tests (optional, for source distributions)
recursive-include tests *.py

# Exclude development scripts and analysis tools
exclude analyze_toucandb.py
recursive-exclude scripts *

# Include GitHub workflows (for transparency)
recursive-include .github *.yml *.yaml

# Exclude development and build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .pytest_cache
global-exclude .coverage
global-exclude htmlcov
global-exclude .DS_Store
global-exclude *.egg-info
global-exclude .git*
global-exclude .venv
global-exclude venv
global-exclude *.tdb
global-exclude *_db/
global-exclude test_*.py
global-exclude quick_validation.py
global-exclude test_ml_features.py
global-exclude test_ml_functionality.py
global-exclude test_simple.py
global-exclude analyze_toucandb.py
